<div class='product-details'>
  {{! Header }}
  <section>
    <h3>{{@name}}</h3>
    <div class='text-warning'>
      <i class='bi bi-star-fill'></i>
      <i class='bi bi-star-fill'></i>
      <i class='bi bi-star-fill'></i>
      <i class='bi bi-star-fill'></i>
      <i class='bi bi-star-half'></i>
    </div>
  </section>

  {{!Price}}
  <section class={{unless @isDetails 'h4'}}>
    <del class='small text-black-50'>{{@price.original}}</del>
    <i class='text-danger font-weight-bold'>{{@price.current}}</i>
  </section>

  {{#if @isDetails}}
    <div>
      <h5>
        Color
      </h5>
      <div class='product-colors active-{{@color}}'>
        {{#each @colors as |colorInfo|}}
          <button
            type='button'
            class='product-color {{concat "color-" colorInfo.color}}'
            {{on 'click' (fn @onChangeColor colorInfo.color)}}
          ></button>
        {{/each}}
      </div>
    </div>
  {{/if}}

</div>